<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Checkout">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    
    <style name="CustomTheme.PaymentPage" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/customColorPrimary</item>
        <item name="colorPrimaryDark">@color/customColorPrimaryDark</item>
        <item name="colorAccent">@color/customColorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="materialCardViewStyle">@style/CustomThemeCardView</item>
    </style>

    <style name="CustomThemeToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="CustomThemeCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/pmcolor_primary</item>
    </style>

    <style name="CustomThemeCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">#00ff00</item>
    </style>

</resources>
