<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
    </style>

    <style name="LightTheme.Checkout">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightThemeToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="LightTheme.PaymentPage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/light_paymentpage_list</item>
        <item name="cardViewStyle">@style/LightThemeCardView</item>
    </style>

    <style name="LightThemeCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/color_controlnormal</item>
        <item name="colorControlActivated">@color/validation_ok</item>
    </style>

    <style name="LightThemeTextInput" parent="Widget.Design.TextInputLayout">
        <!-- hint text color inside EditText -->
        <item name="android:textColorHint">@color/text_hint</item>
        <!-- This color of the area of text selected -->
        <item name="android:textColorHighlight">?attr/colorPrimary</item>
        <!-- underline color control normal -->
        <item name="colorControlNormal">@color/color_controlnormal</item>
        <!-- underline color enabled -->
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="LightThemeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorAccent</item>
        <item name="android:paddingLeft">@dimen/border_large</item>
        <item name="android:paddingRight">@dimen/border_large</item>
        <item name="android:paddingTop">@dimen/border_medium</item>
        <item name="android:paddingBottom">@dimen/border_medium</item>
        <item name="android:bottomLeftRadius">@dimen/button_radius</item>
        <item name="android:bottomRightRadius">@dimen/button_radius</item>
        <item name="android:topLeftRadius">@dimen/button_radius</item>
        <item name="android:topRightRadius">@dimen/button_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LightThemeCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/color_background</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
    </style>
    
</resources>
