<resources>
    <style name="CustomText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/custom_textdark</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="CustomText.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomText.Small.Bold">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="CustomText.Small.Bold.Primary">
        <item name="android:textColor">@color/custom_textprimary</item>
    </style>

    <style name="CustomText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomText.Medium.Gray">
        <item name="android:textColor">@color/custom_textgray</item>
    </style>

    <style name="CustomText.Medium.Light">
        <item name="android:textColor">@color/custom_textlight</item>
    </style>

    <style name="CustomText.Medium.Bold">        
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="CustomText.Medium.Bold.Light">
        <item name="android:textColor">@color/custom_textlight</item>
    </style>

    <style name="CustomText.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomText.Large.Bold">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="CustomTextInputLayoutError" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/custom_validationerror</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/custom_textdark</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/custom_textdark</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
