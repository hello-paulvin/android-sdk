<resources>

    <style name="AppLineDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/pmcolor_list</item>
    </style>

    <style name="TransparentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="DefaultHeaderTitle" parent="PaymentText.XLarge.Bold">
        <item name="android:textColor">@color/pmtext_light</item>
    </style>

    <style name="DefaultTextButton" parent="PaymentText.Medium.Bold">
        <item name="android:textColor">@color/pmtext_primary</item>
    </style>

    <style name="DefaultHeaderSubtitle" parent="PaymentText.Medium">
        <item name="android:textColor">@color/pmtext_light</item>
    </style>

    <style name="DefaultConfirmText" parent="PaymentText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>
