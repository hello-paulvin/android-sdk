<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pmcolor_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pmborder_medium"
        android:clipToPadding="false"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pmborder_large"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_listurl"
                    android:layout_width="match_parent"
                    android:hint="@string/settings_hint"
                    android:inputType="textWebEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pmborder_large"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/WidgetButtonStyle"
                    android:id="@+id/button_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_settings"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
