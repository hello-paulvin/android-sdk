<resources>

    <style name="AppLineDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Widget.ExampleDemo.CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.ExampleDemo.CollapsingToolbar.Collapsed</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.ExampleDemo.CollapsingToolbar.Expanded</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TextAppearance.ExampleDemo.CollapsingToolbar.Expanded" parent="TextAppearance.Payment.Headline6">
        <item name="android:textColor">@color/pm_transparent</item>
    </style>

    <style name="TextAppearance.ExampleDemo.CollapsingToolbar.Collapsed" parent="TextAppearance.Payment.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.ExampleDemo.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton" />

</resources>
