<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/AppButtonText</item>
    </style>

    <style name="CustomThemePaymentList" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/customColorPrimary</item>
        <item name="colorPrimaryDark">@color/customColorPrimaryDark</item>
        <item name="colorAccent">@color/customColorAccent</item>
        <item name="actionBarStyle">@style/CustomThemeActionBar</item>
        <item name="materialCardViewStyle">@style/CustomThemeCardView</item>
        <item name="textInputStyle">@style/CustomThemeTextInput</item>
        <item name="editTextStyle">@style/CustomThemeEditText</item>
        <item name="android:windowBackground">@color/customColorPrimary</item>
    </style>

    <style name="CustomThemeProcessPayment" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/pmcolor_background</item>
        <item name="colorPrimary">@color/customColorPrimary</item>
        <item name="colorPrimaryDark">@color/customColorPrimaryDark</item>
        <item name="colorAccent">@color/customColorAccent</item>
    </style>

    <style name="CustomThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/CustomText.Medium.Bold.Light</item>
    </style>

    <style name="CustomThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:bottomRightRadius">@dimen/custom_dialogradius</item>
        <item name="android:bottomLeftRadius">@dimen/custom_dialogradius</item>
        <item name="android:topRightRadius">@dimen/custom_dialogradius</item>
        <item name="android:topLeftRadius">@dimen/custom_dialogradius</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="CustomThemeCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/custom_cardbackground</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/custom_cardradius</item>
    </style>

    <style name="CustomThemeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CustomThemeTextInput" parent="Widget.Design.TextInputLayout">
        <!-- hint text color inside EditText -->
        <item name="android:textColorHint">@color/custom_textgray</item>
        <!-- This color of the area of text selected -->
        <item name="android:textColorHighlight">@color/custom_textgray</item>
        <!-- underline color control normal -->
        <item name="colorControlNormal">@color/custom_accent</item>
        <!-- underline color enabled -->
        <item name="colorControlActivated">@color/customColorPrimary</item>
        <!-- floating hint text appearance -->
        <item name="hintTextAppearance">@style/CustomTextInputLayoutHint</item>
        <!-- error text appearance -->
        <item name="errorTextAppearance">@style/CustomTextInputLayoutError</item>
    </style>

    <style name="CustomThemeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/CustomTextInputEditText</item>
    </style>

    <style name="CustomThemeCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/custom_validationunknown</item>
        <item name="colorControlActivated">@color/custom_validationok</item>
    </style>
</resources>
