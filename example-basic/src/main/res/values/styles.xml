<resources>
    <style name="AppLabelText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppHeaderText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/custom_textdark</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="CustomText.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomText.Small.Light">
        <item name="android:textColor">@color/custom_textlight</item>
    </style>
    
    <style name="CustomText.Small.Bold">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="CustomText.Small.Bold.Primary">
        <item name="android:textColor">@color/custom_textprimary</item>
    </style>

    <style name="CustomText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomText.Medium.Gray">
        <item name="android:textColor">@color/custom_textgray</item>
    </style>

    <style name="CustomText.Medium.Light">
        <item name="android:textColor">@color/custom_textlight</item>
    </style>

    <style name="CustomText.Medium.Bold">        
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="CustomText.Medium.Bold.Light">
        <item name="android:textColor">@color/custom_textlight</item>
    </style>

    <style name="CustomText.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomText.Large.Bold">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="CustomText.XLarge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomText.XLarge.Bold">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="CustomText.InputLayoutError">
        <item name="android:textColor">@color/custom_validationerror</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomText.InputLayoutHint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomText.InputEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomWidgetTextInputStyle" parent="@style/WidgetTextInputStyle">
        <item name="hintTextAppearance">@style/CustomText.InputLayoutHint</item>
        <item name="errorTextAppearance">@style/CustomText.InputLayoutError</item>
        <item name="boxBackgroundColor">@color/custom_cardbackground</item>
        <item name="android:textColorHint">@color/custom_textgray</item>
        <item name="hintTextColor">@color/custom_textgray</item>
        <item name="errorTextColor">@color/custom_validationerror</item>
        <item name="errorIconDrawable">@null</item>        
    </style>

    <style name="CustomWidgetEditTextStyle" parent="@style/WidgetEditTextStyle">
        <item name="android:textAppearance">@style/CustomText.InputEditText</item>
    </style>

    <style name="CustomPaymentCardStyle" parent="@style/PaymentCardStyle">
        <item name="cardBackgroundColor">@color/custom_cardbackground</item>
        <item name="cardCornerRadius">@dimen/custom_cardradius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>
    
    <style name="CustomWidgetButtonStyle" parent="@style/WidgetButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/CustomText.Medium.Bold.Light</item>        
    </style>

    <style name="CustomDialogButtonStyle" parent="@style/DialogButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/CustomText.Small.Bold.Primary</item>
        <item name="android:textColor">@color/custom_textprimary</item>
    </style>

    <style name="CustomWidgetCheckBoxStyle" parent="@style/WidgetCheckBoxStyle">
        <item name="colorControlNormal">@color/custom_validationunknown</item>
        <item name="colorControlActivated">@color/custom_validationok</item>
    </style>
</resources>
