<resources>

    <style name="PaymentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_ascent</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="PaymentThemeToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="PaymentTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PaymentText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PaymentText.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentText.Tiny.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaymentText.Small.Bold">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Small.Bold.Primary">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PaymentText.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Medium.Gray">
        <item name="android:textColor">@color/text_dark_second</item>
    </style>

    <style name="PaymentText.Medium.Bold.Gray">
        <item name="android:textColor">@color/text_dark_second</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PaymentText.Large.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/progressbar_size</item>
        <item name="android:layout_height">@dimen/progressbar_size</item>
    </style>

    <style name="PaymentTextInputLayoutError" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentTextInputLayout" parent="Widget.Design.TextInputLayout">
        <!-- hint text color inside EditText -->
        <item name="android:textColorHint">@color/color_disabled</item>
        <!-- This color of the area of text selected -->
        <item name="android:textColorHighlight">@color/color_primary</item>
        <!-- underline color disabled -->
        <item name="colorControlNormal">@color/color_disabled</item>
        <!-- underline color enabled -->
        <item name="colorControlActivated">@color/color_primary</item>
    </style>

    <style name="PaymentTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PaymentWidgetButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
</resources>
