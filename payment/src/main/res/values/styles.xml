<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PaymentText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PaymentText.tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaymentText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
