<resources>

    <style name="PaymentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_ascent</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="PaymentTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="PaymentText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PaymentText.tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaymentText.Medium">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
