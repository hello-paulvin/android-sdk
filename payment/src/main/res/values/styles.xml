<resources>

    <style name="PaymentText" parent="TextAppearance.AppCompat">
        <item name="android:textColorPrimary">@color/text_dark_primary</item>
    </style>

    <style name="PaymentText.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentText.Tiny.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaymentText.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Small.Bold.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PaymentText.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Medium.Gray">
        <item name="android:textColor">@color/text_dark_second</item>
    </style>

    <style name="PaymentText.Medium.Hint">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="PaymentText.Medium.Bold.Gray">
        <item name="android:textColor">@color/text_dark_second</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentText.Medium.Bold.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>
    
    <style name="PaymentText.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PaymentText.Large.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentTextInputLayoutError" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
