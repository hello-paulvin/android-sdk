<resources>

    <style name="PaymentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pmtext_dark</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="PaymentText.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaymentText.Small.Light">
        <item name="android:textColor">@color/pmtext_light</item>
    </style>

    <style name="PaymentText.Small.Bold">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PaymentText.Small.Bold.Primary">
        <item name="android:textColor">@color/pmtext_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PaymentText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PaymentText.Medium.Bold">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PaymentText.Medium.Gray">
        <item name="android:textColor">@color/pmtext_gray</item>
    </style>

    <style name="PaymentText.Medium.Hint">
        <item name="android:textColor">@color/pmtext_hint</item>
    </style>

    <style name="PaymentText.Medium.Bold.Gray">
        <item name="android:textColor">@color/pmtext_gray</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PaymentText.Medium.Bold.Light">
        <item name="android:textColor">@color/pmtext_light</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PaymentText.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PaymentText.Large.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PaymentText.XLarge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PaymentText.XLarge.Bold">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PaymentText.InputLayoutError">
        <item name="android:textColor">@color/pmtext_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentText.InputLayoutHint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PaymentText.InputEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WidgetTextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/PaymentText.InputLayoutHint</item>
        <item name="errorTextAppearance">@style/PaymentText.InputLayoutError</item>
        <item name="boxBackgroundColor">@color/pmcolor_background</item>
        <item name="android:textColorHint">@color/pmcolor_controlnormal</item>
        <item name="hintTextColor">@color/pmtext_dark</item>
        <item name="errorTextColor">@color/pmtext_error</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="WidgetEditTextStyle" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/PaymentText.InputEditText</item>
    </style>

    <style name="PaymentCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/pmcolor_background</item>
        <item name="cardCornerRadius">@dimen/pmcard_radius</item>
    </style>

    <style name="WidgetButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/PaymentText.Medium.Bold.Light</item>
        <item name="android:paddingTop">@dimen/pmborder_small</item>
        <item name="android:paddingBottom">@dimen/pmborder_small</item>
        <item name="android:paddingLeft">@dimen/pmborder_medium</item>
        <item name="android:paddingRight">@dimen/pmborder_medium</item>
        <item name="cornerRadius">@dimen/pmbutton_radius</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/PaymentText.Small.Bold.Primary</item>
        <item name="android:textColor">@color/pmcolor_primary</item>

    </style>

    <style name="WidgetCheckBoxStyle" parent="@style/Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorControlNormal">@color/pmcolor_controlnormal</item>
        <item name="colorControlActivated">@color/pmvalidation_ok</item>
        <item name="useMaterialThemeColors">false</item>
    </style>
</resources>
