<resources>
    <style name="PaymentTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/pmcolor_primary</item>
        <item name="colorPrimaryDark">@color/pmcolor_primarydark</item>
        <item name="colorAccent">@color/pmcolor_accent</item>
    </style>

    <style name="PaymentTheme.PaymentList">
        <item name="android:windowBackground">@color/pmcolor_list</item> 
        <item name="paymentListToolbarTheme">@style/PaymentToolbarTheme</item>
        <item name="paymentListToolbarTitleStyle">@style/PaymentText.Medium.Bold</item>

        <item name="paymentListEmptyLabelStyle">@style/PaymentText.Small</item>
        <item name="paymentListHeaderLabelStyle">@style/PaymentText.Medium.Bold</item>        
        <item name="paymentCardStyle">@style/PaymentCardStyle</item>
        <item name="paymentCardLogoBackground">@null</item>
        
        <item name="presetCardTitleStyle">@style/PaymentText.Medium.Bold</item>        
        <item name="presetCardSubtitleStyle">@style/PaymentText.Tiny</item>
        <item name="accountCardTitleStyle">@style/PaymentText.Medium.Bold</item>        
        <item name="accountCardSubtitleStyle">@style/PaymentText.Tiny</item>
        <item name="networkCardTitleStyle">@style/PaymentText.Medium</item>     

        <item name="widgetHintDrawable">@drawable/ic_hint</item>        
        <item name="widgetInfoLabelStyle">@style/PaymentText.Small</item>
        <item name="widgetTextInputStyle">@style/WidgetTextInputStyle</item>
        <item name="widgetEditTextStyle">@style/WidgetEditTextStyle</item>
        <item name="widgetButtonStyle">@style/WidgetButtonStyle</item>        
        <item name="widgetCheckBoxStyle">@style/WidgetCheckBoxStyle</item>
        <item name="widgetCheckBoxLabelCheckedStyle">@style/PaymentText.Medium</item>
        <item name="widgetCheckBoxLabelUncheckedStyle">@style/PaymentText.Medium.Hint</item>
        <item name="widgetSelectLabelStyle">@style/PaymentText.Tiny</item>

        <item name="progressBackground">@color/pmprogress_background</item>     
        <item name="progressColor">@color/pmcolor_primary</item>
    </style>

    <style name="PaymentTheme.ChargePayment">
        <item name="android:windowBackground">@color/pmcolor_background</item>
        <item name="colorPrimaryDark">@color/pmprogress_accent</item>

        <item name="progressBackground">@color/pmprogress_background</item>        
        <item name="progressColor">@color/pmcolor_primary</item>
        <item name="progressHeaderStyle">@style/PaymentText.XLarge.Bold</item>
        <item name="progressInfoStyle">@style/PaymentText.Medium</item>
    </style>
        
    <style name="PaymentDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:bottomRightRadius">@dimen/pmdialog_radius</item>
        <item name="android:bottomLeftRadius">@dimen/pmdialog_radius</item>
        <item name="android:topRightRadius">@dimen/pmdialog_radius</item>
        <item name="android:topLeftRadius">@dimen/pmdialog_radius</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="themedDialogButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="PaymentDialogTheme.Date">
        <item name="themedDateDialogTitleStyle">@style/PaymentText.Medium.Bold</item>
    </style>

    <style name="PaymentDialogTheme.Message">
        <item name="themedMessageDialogTitleStyle">@style/PaymentText.Large.Bold</item>
        <item name="themedMessageDialogDetailsStyle">@style/PaymentText.Medium.Gray</item>
        <item name="themedMessageDialogDetailsNoTitleStyle">@style/PaymentText.Medium.Bold.Gray</item>
        <item name="themedMessageDialogImageLabelStyle">@style/PaymentText.Tiny</item>
    </style>
    
    <style name="PaymentToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    </style>

</resources>
