<resources>

    <style name="PaymentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/pmcolor_primary</item>
        <item name="colorPrimaryDark">@color/pmcolor_primarydark</item>
        <item name="colorAccent">@color/pmcolor_accent</item>
    </style>

    <style name="PaymentTheme.PaymentPage">
        <item name="colorPrimary">@color/pmcolor_primary</item>
        <item name="colorPrimaryDark">@color/pmcolor_primarydark</item>
        <item name="colorAccent">@color/pmcolor_accent</item>
        <item name="actionBarStyle">@style/PaymentThemeActionBar</item>
        <item name="textInputStyle">@style/PaymentThemeTextInput</item>
        <item name="editTextStyle">@style/PaymentThemeEditText</item>
        <item name="materialCardViewStyle">@style/PaymentThemeCardView</item>
        <item name="android:windowBackground">@color/pmcolor_list</item>
    </style>

    <style name="PaymentThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/PaymentText.Medium.Bold.Light</item>
    </style>

    <style name="PaymentThemeCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/pmcolor_background</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">@dimen/pmcard_radius</item>
    </style>

    <style name="PaymentThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:bottomRightRadius">@dimen/pmdialog_radius</item>
        <item name="android:bottomLeftRadius">@dimen/pmdialog_radius</item>
        <item name="android:topRightRadius">@dimen/pmdialog_radius</item>a
        <item name="android:topLeftRadius">@dimen/pmdialog_radius</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="PaymentThemeProgressBarLoad" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/pmcolor_primary</item>
    </style>

    <style name="PaymentThemeProgressBarSend" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/pmvalidation_unknown</item>
        <item name="android:progressTint">@color/pmcolor_primary</item>        
    </style>
    
    <style name="PaymentThemeTextInput" parent="Widget.Design.TextInputLayout">
        <!-- hint text color inside EditText -->
        <item name="android:textColorHint">@color/pmtext_hint</item>
        <!-- This color of the area of text selected -->
        <item name="android:textColorHighlight">?attr/colorPrimary</item>
        <!-- underline color control normal -->
        <item name="colorControlNormal">@color/pmcolor_controlnormal</item>
        <!-- underline color enabled -->
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <!-- floating hint text appearance -->
        <item name="hintTextAppearance">@style/PaymentTextInputLayoutHint</item>
        <!-- error text appearance -->
        <item name="errorTextAppearance">@style/PaymentTextInputLayoutError</item>
    </style>

    <style name="PaymentThemeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/PaymentTextInputEditText</item>
    </style>

    <style name="PaymentThemeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PaymentThemeCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/pmcolor_controlnormal</item>
        <item name="colorControlActivated">@color/pmvalidation_ok</item>
    </style>

</resources>
