<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="@dimen/pmwidget_padding"
    android:paddingBottom="@dimen/pmwidget_padding">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/pmwidget_iconsize"
        android:layout_height="@dimen/pmwidget_iconsize"
        android:layout_marginStart="@dimen/pmborder_small"
        android:layout_marginEnd="@dimen/pmborder_xxsmall"
        android:src="@drawable/ic_date"
        android:contentDescription="Icon"/>

    <LinearLayout
        android:id="@+id/layout_viewholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textinputedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:longClickable="false"
                android:cursorVisible="false"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</LinearLayout>
