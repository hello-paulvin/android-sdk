<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/pmborder_xsmall"
    android:paddingTop="@dimen/pmborder_medium"
    android:paddingBottom="@dimen/pmwidget_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    
        <TextView
            android:id="@+id/label_value_unchecked"
            android:textAppearance="?attr/widgetCheckBoxLabelUncheckedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_value_checked"
            android:textAppearance="?attr/widgetCheckBoxLabelCheckedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        style="?attr/widgetCheckBoxStyle"
        android:id="@+id/checkbox_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</LinearLayout>
