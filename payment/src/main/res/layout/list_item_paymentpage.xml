<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/border_xsmall">

    <android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:animateLayoutChanges="true"
        cardview:cardBackgroundColor="@android:color/white"
        cardview:cardUseCompatPadding="true"
        cardview:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:id="@+id/cardview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="@dimen/cardview_logo_width"
                    android:layout_height="@dimen/cardview_logo_height"
                    android:layout_marginRight="@dimen/border_small"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/text_title"
                    style="@style/PaymentText.Medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_inputfields"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#ff0000"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    style="@style/PaymentText.Medium"
                    android:text="This is a test" />
                <TextView
                    style="@style/PaymentText.Medium"
                    android:text="This is a test" />
                <TextView
                    style="@style/PaymentText.Medium"
                    android:text="This is a test" />
                <TextView
                    style="@style/PaymentText.Medium"
                    android:text="This is a test" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
