<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/border_xsmall">

    <android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        cardview:cardBackgroundColor="@android:color/white"
        cardview:cardUseCompatPadding="true"
        cardview:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:id="@+id/cardview_content"            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/cardview_minheight"
            android:padding="@dimen/border_medium">

            <LinearLayout
                android:id="@+id/cardview_header"            
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="@dimen/cardview_logo_width"
                    android:layout_height="@dimen/cardview_logo_height"
                    android:background="@color/color_primary"
                    android:layout_marginRight="@dimen/border_small"
                    android:adjustViewBounds="true"/>
                
                <TextView
                    android:id="@+id/text_title"
                    style="@style/PaymentText.Medium"
                    android:layout_centerInParent="true"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
