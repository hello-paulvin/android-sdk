<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_paymentpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_list_background">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/toolbar_elevation"
        app:theme="@style/PaymentThemeToolbar"
        app:title="@string/paymentpage_title"/>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_paymentlist"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/label_empty"
        style="@style/PaymentText.Medium.Gray"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/border_xlarge"
        android:layout_marginRight="@dimen/border_xlarge"
        android:gravity="center"
        android:singleLine="false"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/PaymentProgressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
