<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogfragment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingLeft="@dimen/pmborder_large"
            android:paddingRight="@dimen/pmborder_large"
            android:paddingTop="@dimen/pmborder_xmedium"
            android:paddingBottom="@dimen/pmborder_xmedium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pmborder_medium" />

            <TextView
                android:id="@+id/text_message"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pmborder_xmedium"
                android:contentDescription="@string/pmpage_contentdescription" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/dialogfragment_buttons" />
</LinearLayout>
