<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogfragment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingLeft="@dimen/pmborder_large"
            android:paddingRight="@dimen/pmborder_large"
            android:paddingTop="@dimen/pmborder_large"
            android:paddingBottom="@dimen/pmborder_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:textAppearance="?attr/themedMessageDialogTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pmborder_medium"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_message_notitle"
                android:textAppearance="?attr/themedMessageDialogDetailsNoTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_message_title"
                android:textAppearance="?attr/themedMessageDialogDetailsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pmborder_large"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_imageprefix"
                    android:textAppearance="?attr/themedMessageDialogImageLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/pmpage_contentdescription" />

                <TextView
                    android:id="@+id/text_imagesuffix"
                    android:textAppearance="?attr/themedMessageDialogImageLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/dialogfragment_buttons" />
</LinearLayout>
