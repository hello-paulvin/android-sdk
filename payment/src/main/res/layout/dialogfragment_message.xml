<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/pmborder_large"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pmborder_large"
        android:layout_marginRight="@dimen/pmborder_large"
        android:layout_marginBottom="@dimen/pmborder_medium"
        android:textAppearance="@style/PaymentText.Large.Bold"/>

    <TextView
        android:id="@+id/text_message_notitle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pmborder_large"
        android:layout_marginRight="@dimen/pmborder_large"
        android:layout_marginBottom="@dimen/pmborder_large"
        android:textAppearance="@style/PaymentText.Medium.Bold.Gray"/>

    <TextView
        android:id="@+id/text_message_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pmborder_large"
        android:layout_marginRight="@dimen/pmborder_large"
        android:layout_marginBottom="@dimen/pmborder_large"
        android:textAppearance="@style/PaymentText.Medium.Gray"/>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/pmborder_medium"
        android:clickable="true"
        android:visibility="gone"
        android:layout_gravity="end"
        android:focusable="true">

        <TextView
            android:id="@+id/text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/PaymentText.Small.Bold.Primary"/>
    </LinearLayout>
</LinearLayout>
